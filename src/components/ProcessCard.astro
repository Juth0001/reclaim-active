---
import Layout from "../layouts/Layout.astro";
const { img, overskrift, tekst } = Astro.props;
---

<Layout>
  <article class="process">
    <img src={img} alt="process_illustration" />
    <h2>{overskrift}</h2>
    <p>{tekst}</p>
  </article>
</Layout>
<style>
  p {
    width: 300px;
  }
  .process {
  }
  .process {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  img {
    height: auto;
    object-fit: cover;
  }
</style>
