---
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const url =
    "https://varpkyfvejupvanoejdn.supabase.co/rest/v1/Reclaim_producter?select=*";

  const key =
    "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InZhcnBreWZ2ZWp1cHZhbm9lamRuIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDczMTI3MjMsImV4cCI6MjA2Mjg4ODcyM30.UrzGK_Fl5sBW1748bBH1OZ0ONA1yeuPaa9n8eCnz3-0";

  const options = { headers: { apikey: key } };
  const response = await fetch(url, options);
  const data = await response.json();

  return data.map((product) => {
    return {
      params: { id: product.id },
      props: { product },
    };
  });
}

const { id } = Astro.params;
const { product } = Astro.props;
const { name } = Astro.props;
const { price } = Astro.props;
const { size } = Astro.props;
---

<Layout>
  <header>
    <div class="topnav">
      <div class="burger" id="burger">☰</div>
      <ul class="links" id="navLinks">
        <li><a href="/aboutus">OUR STORY</a></li>
        <li><a href="/community">COMMUNITY</a></li>
        <li><a href="/product_list">SHOP</a></li>
        <li><a href="/event_gallery">EVENTS</a></li>
      </ul>
    </div>
    <div class="nav_logo">
      <a href="/"><img src="/src/assets/logo.png" alt="Logo" /></a>
    </div>
  </header>

  <button class="back-button" onclick="history.back()"> &lsaquo;</button>

  <section class="product-wrapper">
    <h2 class="heading">SHOPPING BAG</h2>

    <div class="product-image">
      <img src={product.image_url} alt={product.name} />
    </div>

    <div class="product-info">
      <h3 class="product-name">{product.name}</h3>
      <p class="product-color">{product.Color}</p>
      <p class="product-price">Antal 1</p>
      <p class="product-total">I alt <strong>{product.price} DKK</strong></p>

      <div class="quantity-control">
        <button>-</button>
        <span>1</span>
        <button>+</button>
        <button class="buy-btn">Add to Basket</button>
      </div>

      <div class="pricing">
        <div class="row">
          <span>Tilbud</span>
          <a href="#" class="tilfoej-link">TILFØJ</a>
        </div>
        <div class="row">
          <span>Ordreværdi</span>
          <strong>{product.price} DKK</strong>
        </div>
        <div class="row">
          <span>Levering</span>
          <strong>29 DKK</strong>
        </div>
        <div class="row total">
          <span>I ALT</span>
          <strong>{product.price + 29} DKK</strong>
        </div>
      </div>
      <button class="Shopping-btn">CONTINUE SHOPPING</button>
      <button class="checkout-btn">CONTINUE TO CHECK-OUT</button>
      <a href="#" class="terms-link">TERMS & CONDITIONS</a>
    </div>
  </section>
  <footer>
    <div class="footer_logo">
      <img src="../src/assets/logo_footer.png" />
    </div>

    <div class="part_1">
      <h4>INFORMATION</h4>
      <p>FAQ & Contact</p>
      <p>Priacy & Cookie policy</p>
    </div>
    <div class="part_2">
      <h4>CONTACT US</h4>
      <p>CVR : 38572377</p>
      <p>info@reclaimeactive.com</p>
      <p>2025 Reclaime Active All rights reserved</p>
    </div>
    <div class="part_3">
      <h4>NEWSLETTER</h4>
      <p>
        Join our email list and get alerted of new launches, special offers and
        restocks.
      </p>
      <form class="email-form">
        <label for="email">Tilmeld dig vores nyhedsbrev:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Indtast din e-mail"
          required
        />
        <button type="submit">Tilmeld</button>
      </form>
    </div>
  </footer>

  <script is:inline>
    const burger = document.getElementById("burger");
    const navLinks = document.getElementById("navLinks");

    burger?.addEventListener("click", () => {
      navLinks?.classList.toggle("active");
    });
  </script>
</Layout>
<style>
  /* GLOBAL baggrund  –  lægges FØR @media-blokken */
  html,
  body {
    height: 100%;
    margin: 0;
  }

  body {
    /* Samme gradient som du allerede bruger i .product-wrapper */
    background: linear-gradient(to bottom, #f7f7ed 0%, #d6d6cb 100%);
    background-repeat: no-repeat;
    background-attachment: fixed; /* bliver liggende når man scroller */
    background-size: cover;
    display: flex;
    flex-direction: column;
  }

  /* Lad indhold og footer arve baggrunden i stedet for at have egen */
  .product-wrapper,
  footer {
    background: transparent; /* ingen lokal baggrund, bruger body's gradient */
  }

  /* Sørg for at hovedindhold fylder pladsen over footeren */
  main {
    flex: 1;
  }
  @media (max-width: 768px) {
    /* HEADER/NAVIGATION*/
    header {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      align-items: center;
      padding: 10px 20px;
    }
    .topnav {
      grid-column: 1 / 2;
      display: flex;
      align-items: center;
    }
    .nav_logo {
      grid-column: 3 / 4;
      display: flex;
      justify-content: flex-end;
    }
    .nav_logo img {
      height: 40px;
    }
    .links {
      display: none;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      list-style: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 80vw;
      height: 25%;

      box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
      z-index: 1000;
      font-size: 1.2rem;
      gap: 20px;
    }
    .links.active {
      display: flex;
    }
    .links li a {
      color: #000;
      text-decoration: none;
      font-weight: bold;
    }
    .burger {
      display: block;
      font-size: 32px;
      cursor: pointer;
      z-index: 1100;
      padding: 10px;
    }
    /*TILBAGE_KNAP*/
    .back-button {
      background: none;
      border: none;
      color: #000;
      font-size: 2rem;
      font-weight: bold;
      cursor: pointer;
      margin-top: 1rem;

      margin-left: 3rem;

      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .back-button:hover {
      text-decoration: underline;
    }
    /*main*/
    .product-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem 1rem;
      font-family: "Helvetica Neue", sans-serif;
      max-width: 400px;
      margin: 0 auto;
    }
    .heading {
      text-transform: uppercase;
      font-size: 1.3rem;
      margin-bottom: 1.5rem;
      font-weight: bold;
    }
    .product-image img {
      width: 280px;
      height: auto;
      border-radius: 8px;
      object-fit: cover;
    }
    .product-info {
      text-align: center;
      width: 100%;
      padding: 1rem;
    }
    .product-name {
      font-weight: bold;
      font-size: 1.1rem;
      margin-top: 1rem;
    }
    .product-color {
      margin: 0.5rem 0;
      font-size: 1rem;
    }
    .product-price,
    .product-total {
      font-size: 1rem;
      margin: 0.3rem 0;
    }
    .product-total strong {
      font-weight: bold;
    }
    .quantity-control {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
      margin: 1rem 0;
    }
    .quantity-control button {
      font-size: 1.5rem;
      padding: 0.4rem 1rem;
      background: none;
      border: 1px solid #000;
      border-radius: 6px;
      cursor: pointer;
    }
    .quantity-control span {
      font-size: 1.3rem;
    }
    .pricing {
      width: 100%;
      margin-top: 1.5rem;
      font-size: 0.95rem;
    }
    .row {
      display: flex;
      justify-content: space-between;
      padding: 0.4rem 0;
    }
    .tilfoej-link {
      text-decoration: underline;
      font-weight: 500;
      color: #000;
    }
    .total {
      font-weight: bold;
      margin-top: 1rem;
    }
    .Shopping-btn {
      width: 100%;
      padding: 1rem;
      background-color: #fff;
      color: #000;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      margin-top: 1.5rem;
      cursor: pointer;
    }
    .shopping-btn:hover {
      background-color: #333;
    }
    .checkout-btn {
      width: 100%;
      padding: 1rem;
      background-color: #000;
      color: #fff;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      margin-top: 1.5rem;
      cursor: pointer;
    }
    .checkout-btn:hover {
      background-color: #333;
    }
    .terms-link {
      display: block;
      margin-top: 1.2rem;
      text-decoration: underline;
      color: #000;
      font-size: 0.9rem;
    }
    .buy-btn {
      padding: 0.75rem 1.5rem;
      background-color: #000;
      color: #000;
      border: none;
      border-radius: 999px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 1rem;
    }
    .buy-btn:hover {
      background-color: #333;
    }
    /* FOOTER*/
    .email-form {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 1.5rem;
      flex-wrap: wrap;
    }
    .email-form input[type="email"] {
      padding: 0.75rem 1rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 999px;
      min-width: 250px;
      max-width: 100%;
      outline: none;
      transition: border-color 0.2s;
    }
    .email-form input[type="email"]:focus {
      border-color: #000;
    }
    .email-form button {
      padding: 0.75rem 1.5rem;
      background-color: #000;
      color: #fff;
      border: none;
      border-radius: 999px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .email-form button:hover {
      background-color: #333;
    }
    footer {
      display: grid;
      grid-template-columns: 2;
      grid-template-rows: auto;
    }
    .footer_logo {
      grid-column: 1/2;
      grid-row: 1/2;
    }
    .part_1 {
      grid-column: 1/2;
      grid-row: 2/3;
    }
    .part_2 {
      grid-column: 2/3;
      grid-row: 2/3;
    }
    .part_3 {
      grid-column: 1/3;
      grid-row: 3/4;
    }
    .part_1,
    .part_2,
    .part_3,
    .footer_logo {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>.

