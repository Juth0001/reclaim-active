      min-width: 250px;
      max-width: 100%;
      outline: none;
      transition: border-color 0.2s;
    }
    .email-form input[type="email"]:focus {
      border-color: #000;
    }
    .email-form button {
      padding: 0.75rem 1.5rem;
      background-color: #000;
      color: #fff;
      border: none;
      border-radius: 999px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .email-form button:hover {
      background-color: #333;
    }
    footer {
      display: grid;
      grid-template-columns: 3;
      grid-template-rows: auto;
      margin-bottom: 2rem;
    }
    .footer_logo {
      grid-column: 1/3;
      grid-row: 1/2;
      justify-self: center;
    }
    .part_1 {
      grid-column: 3/4;
      grid-row: 1/2;
    }
    .part_2 {
      grid-column: 3/4;
      grid-row: 2/3;
    }
    .part_3 {
      grid-column: 1/3;
      grid-row: 2/3;
    }
    .part_1,
    .part_2,
    .part_3,
    .footer_logo {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>.

