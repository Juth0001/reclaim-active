---

<Layout>
  <header>
    <div class="topnav">
      <div class="burger" id="burger">☰</div>
      <ul class="links" id="navLinks">
        <li><a href="/aboutus">OUR STORY</a></li>
        <li><a href="/community">COMMUNITY</a></li>
        <li><a href="/product_list">SHOP</a></li>
        <li><a href="/event_gallery">EVENTS</a></li>
      </ul>
    </div>
    <div class="nav_logo">
      <a href="/index"
        ><img src="/src/assets/logo.png" alt="Logo" id="logo_1" /></a
      >
      <a href="/index"
        ><img src="src/assets/desktop_nav_name.png" id="logo_2" /></a
      >
    </div>
  </header>
  <section class="main_grid">
    <section class="Product">
      <h2>Hijabs</h2>
      <div class="Hijab-grid">
        {
          data.map(
            (product) =>
              product.catagory === "Hijab" && <ProductCard product={product} />
          )
        }
      </div>
    </section>
    <section class="Product">
      <h2>Active Wear</h2>
      <div class="Wear-grid">
        {
          data.map(
            (product) =>
              product.catagory === "Top" && <ProductCard product={product} />
          )
        }
        {
          data.map(
            (product) =>
              product.catagory === "Pants" && <ProductCard product={product} />
          )
        }
      </div>
    </section>
    <section class="Product">
      <h2>Accesories</h2>
      <div class="Accesories-grid">
        {
          data.map(
            (product) =>
              product.catagory === "Accesories" && (
                <ProductCard product={product} />
              )
          )
        }
      </div>
    </section>

    <section class="Product">
      <h2>Events</h2>
      <div class="Events-grid">
        {
          data.map(
            (product) =>
              product.catagory === "Event" && <ProductCard product={product} />
          )
        }
      </div>
    </section>
  </section>

  <section class="Community">
    <h2>Stay Updated On</h2>
    <h1>COLLECTIVE SOCIALS</h1>
    <div>
      <a
        href="https://www.instagram.com/reclaimactive?igsh=MXFrZWxvank1YmpmeA%3D%3D"
        target="_blank"><img src="src/assets/instagram_icon.png" /></a
      >
      <a
        href="https://www.facebook.com/profile.php?id=61563474538002"
        target="_blank"
      >
        <img src="src/assets/facebook_icon.png" /></a
      >
      <a
        href="https://www.tiktok.com/@reclaimactive?_t=8p1fMl26r0z&_r=1"
        target="_blank"><img src="src/assets/tiktok_icon.png" /></a
      >
    </div>
  </section>

  <footer>
    <div class="footer_logo">
      <img src="src/assets/logo_footer.png" />
    </div>

    <div class="part_1">
      <h4>INFORMATION</h4>
      <p>FAQ & Contact</p>
      <p>Priacy & Cookie policy</p>
    </div>
    <div class="part_2">
      <h4>CONTACT US</h4>
      <p>CVR : 38572377</p>
      <p>info@reclaimeactive.com</p>
      <p>2025 Reclaime Active All rights reserved</p>
    </div>
    <div class="part_3">
      <h4>NEWSLETTER</h4>
      <p>
        Join our email list and get alerted of new launches, special offers and
        restocks.
      </p>
      <form class="email-form">
        <label for="email">Tilmeld dig vores nyhedsbrev:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Indtast din e-mail"
          required
        />
        <button type="submit">Tilmeld</button>
      </form>
    </div>
  </footer>

  <script is:inline>
    const burger = document.getElementById("burger");
    const navLinks = document.getElementById("navLinks");

    burger?.addEventListener("click", () => {
      navLinks?.classList.toggle("active");
    });
  </script>
</Layout>

<style>
  @media (max-width: 768px) {
    /* HEADER/NAVIGATION*/
    header {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      align-items: center;
